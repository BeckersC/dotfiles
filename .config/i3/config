#Launch Rofi

bindsym $mod1+d exec rofi -show run -lines 6 -eh 2 -fullscreen -width 100 -padding 400 -opacity "80" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "Ubuntu Mono 15"

# startup

# Xrandr

exec_always --no-startup-id xrandr --output DisplayPort-1 --off --output DisplayPort-2 --off --output HDMI-1-3 --off --output $screen2 --mode 1920x1080 --pos 0x0 --rotate left --output HDMI-1-2 --off --output HDMI-1-1 --off --output $screen1 --mode 2560x1080 --pos 1080x280 --rotate normal --output HDMI-A-3 --off --output DP-1-1 --off


# Keys

exec_always xmodmap -e "clear lock" #disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# Daemons

