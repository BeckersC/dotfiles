#window                  border                 background          text                    indicator
client.focused           $blue                  $bg-color           $text-color             #00ff00
client.unfocused         $inactive-bg-color     $inactive-bg-color  $inactive-text-color    #00ff00
client.focused_inactive  $inactive-bg-color     $inactive-bg-color  $inactive-text-color    #00ff00
client.urgent            $urgent-bg-color       $urgent-bg-color    $text-color             #00ff00


# Launch Rofi
bindsym $mod1+d exec rofi -show run -lines 6 -eh 2 -fullscreen -width 100 -padding 400 -opacity "80" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "Ubuntu Mono 15"

# Bars
bar {
        status_command  i3blocks -c ~/.config/i3/i3blocks.conf
        position top
        workspace_buttons no
        colors {
                background $bg-color
                separator #757575
                #                   border             background           text
                focused_workspace   $urgent-bg-color   $bg-color            $text-color
                inactive_workspace  $inavtive-bg-color $inactive-bg-color   $inactive-text-color
                urgent_workspace    $urgent-bg-color   $urgent-bg-color     $text-color
         }
}

bar {
    position bottom
    workspace_buttons yes
    colors {
                background $bg-color
                separator #757575
                #                   border             background           text
                focused_workspace   $urgent-bg-color   $urgent-bg-color     $text-color
                inactive_workspace  $inavtive-bg-color $inactive-bg-color   $inactive-text-color
                urgent_workspace    $blue              $blue            $text-color
            }
}

